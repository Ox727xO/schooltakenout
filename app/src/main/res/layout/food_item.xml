<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/food"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:foreground="?android:attr/selectableItemBackground"
	app:cardPreventCornerOverlap="false"
	app:cardUseCompatPadding="true"
	android:clickable="false">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_margin="16dp">

		<ImageView
			android:id="@+id/food_img"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:src="@drawable/ic_avatar"/>

		<TextView
			android:id="@+id/food_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toEndOf="@id/food_img"
			android:text="美食"
			android:textColor="#000000"
			android:textSize="25sp"/>

		<TextView
			android:id="@+id/food_price"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toStartOf="@id/food_add"
			android:layout_alignBottom="@id/food_img"
			android:text="0.00"
			android:textColor="#8F8F8F"
			android:textSize="32sp"/>

		<TextView
			android:id="@+id/food_num"
			android:layout_width="20dp"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignStart="@id/food_add"
			android:layout_below="@id/food_reduce"
			android:layout_above="@id/food_add"
			android:text="2"
			android:textSize="16sp"
			android:gravity="center"/>

		<ImageButton
			android:id="@+id/food_reduce"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:src="@drawable/ic_reduce"
			android:layout_alignParentEnd="true"
			android:layout_alignParentTop="true"/>

		<ImageButton
			android:id="@+id/food_add"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:src="@drawable/ic_add"
			android:layout_alignParentEnd="true"
			android:layout_alignBottom="@+id/food_img"/>
	</RelativeLayout>
</android.support.v7.widget.CardView>